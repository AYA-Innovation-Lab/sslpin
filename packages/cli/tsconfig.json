{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.ts", "*.js"]
    },
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "esm": true
  }
}
